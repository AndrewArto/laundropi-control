# Central (WS + API) runtime configuration
CENTRAL_PORT=4000
SESSION_SECRET=changeme
# Default UI user is admin/admin on first run (change in System > User Management).
REQUIRE_UI_AUTH=true
SESSION_TTL_HOURS=12
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=lax
CORS_ORIGINS=https://ui.washcontrol.io,https://washcontrol.io
REQUIRE_CORS_ORIGINS=true
AGENT_SECRETS=<agent-id-1>:<secret-1>,<agent-id-2>:<secret-2>
REQUIRE_KNOWN_AGENT=true
ALLOW_DYNAMIC_AGENT_REGISTRATION=false
ALLOW_LEGACY_AGENT_SECRET=false
LEAD_FORM_ENABLED=true
LEAD_RATE_LIMIT_MS=60000
# Required to encrypt integration credentials (cameras, future providers)
INTEGRATION_SECRETS_KEY=changeme
# Optional: camera frame timeout (ms)
CAMERA_FRAME_TIMEOUT_MS=4000
# Optional: central camera frame cache/dedup window (ms)
CAMERA_FRAME_CACHE_MS=5000
# Optional: minimum interval between agent frame requests (ms)
CAMERA_FRAME_MIN_INTERVAL_MS=5000
# Optional: allow non-RTSP camera sources (local FFmpeg devices)
CAMERA_ALLOW_NON_RTSP=false
# Fact.pt API key for invoice generation (Finance > Faturas tab)
FACTPT_API_KEY=
# Speed Queen Insights API (replaces camera-based machine detection)
# Get API key from Speed Queen Insights portal
SPEEDQUEEN_API_KEY=
# Comma-separated Speed Queen location IDs (e.g., loc_d23f6c,loc_7b105b)
SPEEDQUEEN_LOCATIONS=
# Optional: REST polling fallback interval when WebSocket disconnects (ms, default 60000)
SPEEDQUEEN_POLL_INTERVAL_MS=60000
# Set to true to use mock Speed Queen API (simulated machines for local dev)
SPEEDQUEEN_MOCK=false
