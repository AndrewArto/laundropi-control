{
  "name": "laundropi-control",
  "version": "1.0.0",
  "private": true,
  "description": "UI + API control app for LaundroPi",
  "main": "server.js",
  "scripts": {
    "dev": "vite",
    "dev:server": "nodemon server.js",
    "dev:all": "concurrently \"npm:dev\" \"npm:dev:server\"",
    "dev:central": "ts-node --transpile-only --compiler-options '{\"module\":\"CommonJS\",\"moduleResolution\":\"node\"}' src/server/index.ts",
    "dev:agent": "ts-node --transpile-only --compiler-options '{\"module\":\"CommonJS\",\"moduleResolution\":\"node\"}' src/device/agent.ts",
    "deploy:mock:dev": "bash deploy/deploy-mock.sh dev",
    "deploy:mock:prod": "bash deploy/deploy-mock.sh prod",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "lucide-react": "^0.453.0",
    "onoff": "^6.0.3",
    "ws": "^8.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.4",
    "@types/ws": "^8.5.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
