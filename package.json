{
  "name": "laundropi-control",
  "version": "1.0.0",
  "private": true,
  "description": "UI + API control app for LaundroPi",
  "scripts": {
    "dev": "npm run dev:ui",
    "dev:ui": "vite",
    "dev:central": "ts-node --transpile-only --compiler-options '{\"module\":\"CommonJS\",\"moduleResolution\":\"node\"}' src/server/index.ts",
    "dev:agent": "ts-node --transpile-only --compiler-options '{\"module\":\"CommonJS\",\"moduleResolution\":\"node\"}' src/device/agent.ts",
    "dev:local:ui": "VITE_API_TARGET=http://localhost:3001 vite",
    "dev:lan:ui": "VITE_API_TARGET=http://192.168.3.124:3001 vite",
    "dev:lan": "concurrently \"npm:dev:lan:ui\" \"npm:dev:local:central\" \"npm:dev:local:agent:brandoa1\" \"npm:dev:local:agent:brandoa2\" \"npm:dev:local:go2rtc\"",
    "dev:local:central": "CENTRAL_ENV_FILE=./config/local/central.env npm run dev:central",
    "dev:local:agent:brandoa1": "AGENT_ENV_FILE=./config/local/agent.brandoa1.env npm run dev:agent",
    "dev:local:agent:brandoa2": "AGENT_ENV_FILE=./config/local/agent.brandoa2.env npm run dev:agent",
    "dev:local": "concurrently \"npm:dev:local:ui\" \"npm:dev:local:central\" \"npm:dev:local:agent:brandoa1\" \"npm:dev:local:agent:brandoa2\" \"npm:dev:local:go2rtc\"",
    "dev:local:go2rtc": "bash scripts/go2rtc-dev.sh",
    "deploy:mock:dev": "bash deploy/deploy-mock.sh dev",
    "deploy:mock:prod": "bash deploy/deploy-mock.sh prod",
    "build": "vite build",
    "preview": "vite preview",
    "pretest": "npm rebuild better-sqlite3",
    "test": "vitest run"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsdom": "^27.3.0",
    "lucide-react": "^0.453.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.9.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@vitejs/plugin-react": "^4.3.2",
    "canvas": "^3.2.1",
    "concurrently": "^9.1.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
